<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
<script src="/jquery-2.1.3.min.js"></script>
<script language="JavaScript">
$(function() {

	var bt2cmd=[
		[ 'bt_quit',        'q'    ],
		[ 'bt_pause-resume','p'    ],
		[ 'bt_left',        'left' ],
		[ 'bt_right',       'right'],
		[ 'bt_down',        'down' ],
		[ 'bt_up',          'up'   ],
	];

	for(var i=0;i<bt2cmd.length;i++) {
		(function(c) {
			$('#'+c[0]).click( function() {
				$.get('/-control/'+c[1]);
			});
		})(bt2cmd[i]);
	}

});

</script>
</head>
<body>

 <span id="bt_quit">[Stop]</span>
 <span id="bt_pause-resume">[Pause/Resume]</span>
 <span id="bt_left">[Seek -30]</span>
 <span id="bt_right">[Seek +30]</span>
 <span id="bt_down">[Seek -600]</span>
 <span id="bt_up">[Seek +600]</span>
<br>

<%= content %>
</body>
</html>
